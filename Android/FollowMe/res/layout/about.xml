<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background = "@drawable/bg"
	android:padding="10dip">
	
<TextView android:id="@+id/about_title" android:textSize="30dp" android:gravity="center"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="@string/about_title" />
<TextView android:id="@+id/about_content"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="@string/about_game" android:layout_below="@id/about_title"
		android:textSize="20dp"/>
		
<com.google.ads.AdView android:id="@+id/adViewAbout" android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom|center"
                       ads:adUnitId="a14e948e6a11812"
                       ads:adSize="BANNER"
                       ads:loadAdOnCreate="true"/>
</RelativeLayout>
